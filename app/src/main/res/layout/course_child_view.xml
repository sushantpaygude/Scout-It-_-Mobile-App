<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/colorWhite"
    android:elevation="5dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textCourseInstructor"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent in sem odio. Sed convallis leo eget dui dignissim facilisis. Fusce a ipsum eget nisi porta porta."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCourseInstructor"
        android:layout_toRightOf="@id/imageItemImage"
        android:id="@+id/textInstructorEmail"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent in sem odio. Sed convallis leo eget dui dignissim facilisis. Fusce a ipsum eget nisi porta porta."/>
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonContact"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:text="Contact"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/textInstructorEmail"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/buttonContact"
        android:background="@color/colorGrey"
        android:layout_marginTop="2dp"/>
</RelativeLayout>


